    '#title' => st('Install example content'),
  );
  $form['register'] = array(
    '#type' => 'fieldset',
    '#title' => st('Register aGov'),
  );
  $form['register']['agov_register_confirm'] = array(
    '#type' => 'checkbox',
    '#title' => st('Register your aGov site'),
  );

  $form['register']['fields'] = array(
    '#prefix' => '<div id="agov-install-register-fields">',
