{
    "name": "govCMS/govCMS",
    "description": "GovCMS7 Drupal Distribution.",
    "keywords": ["GovCMS", "GovCMS7"],
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.govcms.gov.au",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/7"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require-dev": {
        "dmore/behat-chrome-extension": "^1.2",
        "drupal/coder": "^8.2",
        "drupal/drupal-extension": "^4.0",
        "drush/drush": "~8",
        "grasmash/drupal-security-warning": "^1.1",
        "jakoch/phantomjs-installer": "^2.1",
        "phing/phing": "^2.16",
        "phploc/phploc": "^3.0 || ^4.0",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^4.8.35 || ^6.5",
        "se/selenium-server-standalone": "^3.12"
    },
    "config": {
        "bin-dir": "bin",
        "preferred-install": "dist",
        "secure-http": false,
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "post-install-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ],
        "post-update-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ]
    },
    "conflict": {
       "drupal/core": "8.*",
       "drush/drush": ">9"
    },
    "suggest": {
        "hirak/prestissimo": "^0.3"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
