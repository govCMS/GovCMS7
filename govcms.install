            'visible' => TRUE,
          ),
        ),
      ),
    ),
  ));
}

/*
 * Enable OpenAccess buttons in Rich Text profile.
 */
function govcms_enable_openaccess_buttons() {
  $profile = wysiwyg_profile_load('rich_text');
  if ($profile) {
    $settings = $profile->settings;
    if (!isset($settings['buttons']['performx'])) {
      $settings['buttons']['performx'] = array(
        'pxTable' => 1,
        'pxAccessibility' => 1,
      );

      // Update settings in the database.
      $update = db_update('wysiwyg')
        ->fields(array('settings' => serialize($settings)))
        ->condition('format', 'rich_text')
        ->condition('editor', 'ckeditor')
        ->execute();

      // Clear wysiwyg profile cache to see the changes.
      wysiwyg_profile_cache_clear();
    }
  }
}

/**
 * Enables robotstxt module in place of removed robots.txt file.
 */
function govcms_update_7200() {
  module_enable(array('robotstxt'));
}

/**
