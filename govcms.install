/**
 * Sets a custom date format.
 *
 * This install function works in 3 steps:
 * 1) Install the date type - Month Year format ("F Y").
 * 2) Setup a date type of Publications.
 * 3) Using variable set we then associate the format and type.
 */
function _govcms_date_formats() {
  $t_function = get_t();

  // Variables.
  $date_formats = array(
    'govcms_month_year' => array(
      'format' => array(
        'type' => 'govcms_month_year',
        'format' => 'F Y',
        'locked' => TRUE,
        'is_new' => TRUE,
      ),
      'type' => array(
        'type' => 'govcms_month_year',
        'title' => $t_function('Month Year Format'),
        'locked' => TRUE,
        'is_new' => TRUE,
      ),
    ),
    'govcms_month_day_year' => array(
      'format' => array(
        'type' => 'govcms_month_day_year',
        'format' => 'j F Y',
        'locked' => TRUE,
        'is_new' => TRUE,
      ),
      'type' => array(
        'type' => 'govcms_month_day_year',
        'title' => $t_function('Month Day Year Format'),
        'locked' => TRUE,
        'is_new' => TRUE,
      ),
    ),
  );

  // Save the data.
  foreach ($date_formats as $type_string => $data) {
    system_date_format_save($data['format']);
    system_date_format_type_save($data['type']);
    variable_set('date_format_' . $type_string, $data['format']['format']);
  }

  variable_set('date_format_short', "d/m/Y - g:ia");
}

/**
 * Setup some default blocks.
 */
function _govcms_default_blocks() {
  // Get all the govCMS supported themes.
  $themes = govcms_supported_themes();

  // Set default system block in primary theme.
  govcms_core_insert_block('system', 'main', $themes, 'content', -12);
  govcms_core_insert_block('system', 'help', $themes, 'content', -14);
  govcms_core_insert_block('superfish', '1', $themes, 'navigation');
  govcms_core_insert_block('menu', 'menu-footer-sub-menu', $themes, 'footer', 3);

  // Set govCMS blocks.
  govcms_core_insert_block('govcms_text_resize', 'text_resize', $themes, 'header');
  govcms_core_insert_block('workbench', 'block', $themes, 'content', -14);
  govcms_core_insert_block('menu_block', 'govcms_menu_block-footer', $themes, 'footer', 2);
  govcms_core_insert_block('views', 'slideshow-block', $themes, 'highlighted', 0, 1, '<front>');
  govcms_core_insert_block('views', 'footer_teaser-block', $themes, 'footer', 1);

  // Set govCMS sidebar blocks.
  govcms_core_insert_block('menu_block', 'govcms_menu_block-sidebar', $themes, 'sidebar_second', -50);
  govcms_core_insert_block('menu', 'menu-quick-links', $themes, 'sidebar_second', -48);
  govcms_core_insert_block('govcms_social_links', 'services', $themes, 'sidebar_second', -47);

  // Set some blocks in the admin theme.
  govcms_core_insert_block('system', 'main', GOVCMS_DEFAULT_ADMIN_THEME, 'content');
  govcms_core_insert_block('system', 'help', GOVCMS_DEFAULT_ADMIN_THEME, 'help');
  govcms_core_insert_block('govcms_core', 'update_notification', GOVCMS_DEFAULT_ADMIN_THEME, 'help', 24, BLOCK_VISIBILITY_LISTED, "admin/reports/updates*");

  // Ensure Wcag validate block only appears on correct pages.
  db_update('block')->fields(array(
    'visibility' => BLOCK_VISIBILITY_LISTED,
    'pages' => "node/*\n<front>\nnews-media\nnews-media/*\npublications\npublications/*\nblog\nblog/*\ncontact\nsitemap\ntags\ntags/*",
  ))
  ->condition('module', 'wcag_validate')
  ->condition('delta', 'wcag_validate')
  ->execute();

}

